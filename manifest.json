{
  "manifest_version": 3,
  "name": "Branestawm - Your AI Chief of Staff",
  "version": "1.0.0",
  "description": "Your indispensable AI Chief of Staff - cognitive prosthetic for neurodivergent users",
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "offscreen"
  ],
  "host_permissions": [
    "https://*/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Branestawm"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["content-google.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": ["content-perplexity.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "webllm-worker.js",
        "webllm-bundle.js",
        "offscreen.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "oauth2": {
    "client_id": "1083981042375-vkh2nqlbude3o9hs3faj090o3l6bdc12.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/generative-language.retriever"
    ]
  }
}